{
	"name": "prisma-svelte-course",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "prisma generate && vite build && prisma migrate deploy && prisma db seed",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"test": "playwright test",
		"lint": "prettier --plugin-search-dir . --check .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"devDependencies": {
		"@faker-js/faker": "^8.0.2",
		"@mermaid-js/mermaid-cli": "^10.2.2",
		"@playwright/test": "^1.28.1",
		"@prisma/client": "4.8.0",
		"@prisma/generator-helper": "^4.16.0",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/kit": "^1.5.0",
		"date-fns": "^2.30.0",
		"is-email": "^1.0.2",
		"markdown": "^0.5.0",
		"open-props": "^1.5.9",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.8.1",
		"prisma": "4.8.0",
		"prisma-docs-generator": "^0.8.0",
		"prisma-erd-generator": "^1.7.0",
		"superstruct": "^1.0.3",
		"svelte": "^3.54.0",
		"svelte-check": "^3.0.1",
		"typescript": "^5.0.0",
		"vite": "^4.3.0",
		"vite-node": "^0.32.0"
	},
	"type": "module",
	"prisma": {
		"seed": "vite-node ./prisma/seed.js"
	}
}
